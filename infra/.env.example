# ======================
# Kafka (defaults)
# ======================
# ברירת מחדל לריצה מקומית מחוץ לדוקר:
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ייעודי: לריצה מחוץ לדוקר / בתוך דוקר (אופציונלי, לשימוש בקוד לפי הצורך)
KAFKA_BOOTSTRAP_SERVERS_HOST=localhost:9092
KAFKA_BOOTSTRAP_SERVERS_DOCKER=kafka:29092
ENABLE_KAFKA=1

# מזהים נוחים לדיבוג וניהול offsets
KAFKA_CLIENT_ID=cloud-news-ui
KAFKA_CONSUMER_GROUP=cloud-news-ui-group

# Topics
TOPIC_NEWS_CLASSIFIED=news.classified

# ======================
# Firestore
# ======================
# בריצה מקומית: נתיב יחסי לקובץ המפתח (לא להעלות ל-git):
GOOGLE_APPLICATION_CREDENTIALS=infra/keys/service-account.json
FIRESTORE_PROJECT_ID=your-gcp-project-id
FIRESTORE_COLLECTION=articles

# ======================
# Cloudinary (optional)
# ======================
# דוגמה בלבד. אין לשתף מפתחות אמיתיים.
CLOUDINARY_URL=cloudinary://KEY:SECRET@CLOUD_NAME
